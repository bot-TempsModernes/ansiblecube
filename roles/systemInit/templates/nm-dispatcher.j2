#!/bin/bash

if [ "$2" = "up" ]; then  
           sleep 120 && rm -rf /var/lib/ansible/ && /usr/local/bin/ansible-pull -d /var/lib/ansible/local -i hosts -U https://github.com/ideascube/ansiblecube.git update_{{ ideascube_id }}.yml --extra-vars "use_hdd={{use_hdd}} send_to_central_server={{send_to_central_server}} import_ideascube_data={{import_ideascube_data}} download_data={{download_data}}" >> /var/log/ansible-pull.log 2>&1 &
fi  
