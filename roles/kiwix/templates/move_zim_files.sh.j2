#!/bin/bash

OLD_PATH={{old_kiwix_path}}
NEW_PATH={{zim_path}}


cd $OLD_PATH
mkdir -p $NEW_PATH/data/{content,index,library}
mkdir -p /var/ideascube/main/catalog/

find ./ -type f -regextype posix-extended -regex "^.*zim$|^.*zima{2}" -print0 | while IFS= read -r -d $'\0' i; do

        zim_file=`echo $i | cut -d "/" -f3`

        if [ -z "$zim_file" ]; then
                zim_file=`echo $i | cut -d "/" -f2`
        fi

        new_name=`echo $i | cut -d "/" -f3 | cut -d "_" -f1-2 | sed 's/_/./'`

        if [ -z "$new_name" ]; then
                new_name=`echo $i | cut -d "/" -f2 | cut -d "_" -f1-2 | sed 's/_/./'`
        fi
        
        echo "[+] Move $i"
        
        folder_name=`echo $i | cut -d "/" -f3 | cut -d "_" -f1-2`
        nameWithDate=$new_name-0000-00-00
        
        if [ -n "$folder_name" ]; then
                index_folder_full_path=`find ./ -type d -name "$folder_name*"`
                index_folder=`find ./ -type d -name "$folder_name*" -printf '%f\n'`
        fi

        echo "$new_name" >> $OLD_PATH/list.txt

        mkdir -p $OLD_PATH/packages/$nameWithDate/data/{content,index,library}

        is_several_files=`echo "$i" | grep zimaa`

        if [ -n "$is_several_files" ]; then
                mv ${i%?}* $NEW_PATH/data/content/
                full_zim_name=$zim_file
        else
                zip_file_name=$new_name
                full_zim_name="$new_name".zim
                mv $i $NEW_PATH/data/content/$full_zim_name
        fi

        if [ -n "$index_folder_full_path" ]; then
                mv "$index_folder_full_path" $NEW_PATH/data/index

                cd $NEW_PATH
                /usr/local/bin/kiwix-manage $OLD_PATH/packages/$nameWithDate/data/library/"$zim_file".xml add data/content/$full_zim_name -i=data/index/$index_folder
        else
                cd $NEW_PATH
                /usr/local/bin/kiwix-manage $OLD_PATH/packages/$nameWithDate/data/library/"$zim_file".xml add data/content/$full_zim_name
        fi 
        
        cd $OLD_PATH/packages/$nameWithDate/
        zip -r "$zip_file_name-0000-00-00" data

        mv "$zip_file_name-0000-00-00" /var/cache/ideascube/catalog/packages/$zip_file_name-0000-00-00
        cd $OLD_PATH
done

rm -rf $OLD_PATH/packages