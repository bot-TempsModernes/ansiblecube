#!/bin/bash

IF=$1
STATUS=$2
PROC=`pgrep ansible-pull`

if [[ "$IF" == "eth0" || "$IF" == "wlan1" ]] && [ -z "$PROC"  ]
then
    case "$STATUS" in
			/usr/local/bin/ansible-pull {% if gateway != ansible_default_ipv4.gateway %}- o{% endif %} -s 120 -C oneUpdateFile -d /var/lib/ansible/local -i hosts -U https://github.com/ideascube/ansiblecube.git main.yml --tags "update" >> /var/log/ansible-pull.log 2>&1			
        ;;
        *)
        ;;
    esac
fi
